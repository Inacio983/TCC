<h1 id="hium"><%- receita.nome %></h1>

<div id="rectop">

    <div class="info">
        <p><%- receita.descricao %></p>
    </div>

    <img src="<%- receita.imagem %>">

</div>


<div class="texto">
    <h3>A receita original rende <%- receita.porcoes %> porções</h3>
    <h4>Selecione o quanto deseja fazer da receita original:</h4>
    <a href="/receita/<%- receita.id_receita %>/0.25"><button>1/4</button></a>
    <a href="/receita/<%- receita.id_receita %>/0.333"><button>1/3</button></a>
    <a href="/receita/<%- receita.id_receita %>/0.5"><button>1/2</button></a>
    <a href="/receita/<%- receita.id_receita %>/0.666"><button>2/3</button></a>
    <a href="/receita/<%- receita.id_receita %>/0.75"><button>3/4</button></a>
    <a href="/receita/<%- receita.id_receita %>/1"><button>1</button></a>
    <a href="/receita/<%- receita.id_receita %>/1.5"><button>1 e 1/2</button></a>
    <a href="/receita/<%- receita.id_receita %>/2"><button>2</button></a>
    <a href="/receita/<%- receita.id_receita %>/2.5"><button>2 e 1/2</button></a>
    <a href="/receita/<%- receita.id_receita %>/3"><button>3</button></a>
    <a href="/receita/<%- receita.id_receita %>/4"><button>4</button></a>
    <a href="/receita/<%- receita.id_receita %>/5"><button>5</button></a>
    <h4>Atualmente mostrando <%- porcao %> receita(s)</h4>
</div>

<% extra.forEach(ext => { %>
  
<div class="texto">
  <h3><%- ext[1] %></h3>
</div>

<table id="ingredprep" class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Ingredientes</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <tr>

        <% ext[2].forEach(ingrediente => { %>
        
        <% if (ingrediente[0]%2==0){ %>
          <th scope="row"></th>
      <% }; %>
        <td>
            <select>
                <option ><%- ingrediente[5] %> gramas <%- ingrediente[3] %></option>
                <option ><%- ingrediente[4] %> ml <%- ingrediente[3] %></option>
                <% medindo[ext[0]][ingrediente[0]].forEach(medir => { %>
                      <% if (medir[1] == ingrediente[2]){ %>
                        <option selected><%- medir[2] %> <%- medir[1] %> <%- medir[3] %></option>
                      <%}else { %>
                        <option><%- medir[2] %> <%- medir[1] %> <%- medir[3] %></option>
                      <% }; %>
                <% }); %>
            </select>
        </td>
        <% if (ingrediente[0]%2!=0){ %>
          </tr>
          <tr>
        <% }; %>
        <% }); %>
        </tr>

        
    </tbody>
  </table>
<% }); %>


<% extra.forEach(extr => { %>
  
  <div class="texto">
    <h3><%- extr[1] %></h3>
  </div>
<table id="modprep" class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Modo de Preparo</th>
      </tr>
    </thead>

    
    <tbody>
    <% extr[3].forEach(preparo => { %>

      <tr>
        <th scope="row"></th>
        <td><%- preparo %></td>
      </tr>
  <% }); %>
</tbody>
</table>
  <% }); %>
